# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Solana RPC Configuration
# Server-side RPC (used by monitoring/cron jobs)
# Recommended: Use a paid RPC provider (Helius, Quicknode, etc.) for reliability
# Example: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Network: mainnet-beta, devnet, or testnet
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Client-side RPC (used by wallet adapter in browser)
# Can be same as SOLANA_RPC_URL or a different endpoint
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Authentication
# Secret for JWT token signing (user authentication)
# REQUIRED - Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# Cron Job Security
# Secret for protecting cron endpoints from unauthorized access
# Generate with: openssl rand -hex 32 or use any secure random string
CRON_SECRET=your_random_secret_for_cron_jobs

# Telegram Bot Configuration
# REQUIRED for Telegram notifications
# Create a bot via @BotFather on Telegram and get the bot token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Bot username (without @, e.g., "idlsentinel_bot")
TELEGRAM_BOT_USERNAME=your_bot_username

# App URL (required for Telegram connection links)
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000